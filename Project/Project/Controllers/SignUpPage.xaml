<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Controllers.SignUpPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="30" VerticalOptions="CenterAndExpand">
            <Image Source="profile.jpg" HeightRequest="200" WidthRequest="200"/>
            <Entry x:Name="txtEmail" Text="" Placeholder="Email"/>
            <Entry x:Name="txtPassword" Text="" Placeholder="Password" IsPassword="True"/>
            <Entry x:Name="txtName" Text="" Placeholder="Name"/>
            <Button x:Name="btnCreate" Text="Create" BackgroundColor="LightBlue" CornerRadius="10" Clicked="btnCreate_Clicked"/>
            <Button x:Name="btnCancel" Text="Cancel" BackgroundColor="LightBlue" CornerRadius="10" Clicked="btnCancel_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>